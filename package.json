{
  "name": "wheelgpt",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "prisma": "^6.18.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "glob": "11.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist",
      "node_modules"
    ]
  },
  "scripts": {
    "setup": "npm install && npm run database && npm run build",
    "lint": "npx @biomejs/biome check --write",
    "test": "jest",
    "build": "turbo run build",
    "dev:all": "concurrently \"npm run dev --workspace @wheelgpt/backend\" \"npm start --workspace @wheelgpt/frontend\"",
    "database": "npx prisma migrate deploy && npx prisma generate --sql"
  }
}
