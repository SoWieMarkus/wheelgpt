{
  "name": "wheelgpt",
  "private": true,
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "turbo": "^2.5.4",
    "typescript": "^5.4.0"
  },
  "overrides": {
    "glob": "11.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist",
      "node_modules"
    ]
  },
  "scripts": {
    "setup": "npm install && npm run database --workspace @wheelgpt/backend && npm run build",
    "lint": "npx @biomejs/biome check --write",
    "test": "jest",
    "build": "turbo run build",
    "start": "npm run dev --workspace @wheelgpt/backend"
  }
}
