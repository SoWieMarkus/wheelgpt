generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Channel {
  id                   String   @id
  login                String   @unique
  token                String
  displayName          String
  profileImage         String
  isLive               Boolean  @default(false)
  createdAt            DateTime @default(now())
  guessDelayTime       Float    @default(2)
  botActiveWhenOffline Boolean  @default(false)
  usagePublic          Boolean  @default(true)
}

model TrackmaniaMap {
  channelId    String @id
  uid          String
  name         String
  author       String
  authorTime   Int
  goldTime     Int
  silverTime   Int
  bronzeTime   Int
  championTime Int
  tmxId        Int?
  worldRecord  Int?
}

model Guess {
  channelId   String
  time        Int
  userId      String
  displayName String

  @@id([channelId, userId])
}

model TrackmaniaRoom {
  channelId       String @id
  login           String
  name            String
  numberOfPlayers Int
  maxPlayers      Int
}

model GuesserLeaderboard {
  channelId   String
  userId      String
  displayName String
  points      Int

  @@id([channelId, userId])
}
